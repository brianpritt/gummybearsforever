@model GummyBearsForever.Models.Inventory
@{
    ViewData["Title"] = "Gummy Bears Forever";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="heading">Details</h2>


<div class="container">
<div class="row">
    <div class="col s12 m12">
        <div class="card white">
            <div class="card-content black-text">
                <span class="card-title"> @Html.DisplayFor(model => model.GummyName)</span>
                
                <p>Cost:$ @Html.DisplayFor(model => model.Cost) /lb</p>
                <p>Country of origin: @Html.DisplayFor(model => model.Country)</p>
                </p>
            </div>
            <div class="card-action">
                @Html.ActionLink("Update", "Update", new { id = Model.GummyId })
                @Html.ActionLink("Delete", "Delete", new { id = Model.GummyId })
                @Html.ActionLink("Add New", "Create")
            </div>
        </div>
    </div>
</div>
    </div>



